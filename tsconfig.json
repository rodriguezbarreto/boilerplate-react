{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "paths": {
            "@src/*": ["*"]
        },
    },
    "include": ["./src/**/*"]
}
