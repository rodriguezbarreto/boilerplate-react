    "lint": "eslint src",
    "prettier:fix": "prettier --write",
    "prettier:check": "prettier --check"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
